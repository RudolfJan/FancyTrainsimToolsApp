<Window x:Class="FancyTrainsimToolsDesktop.Views.NotificationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="Transparent" 
        WindowStyle="None" BorderThickness="0" Topmost="True" AllowsTransparency="True" 
        WindowStartupLocation="Manual" Left="800" Top="100" SizeToContent="WidthAndHeight">
    <Grid>
      <Border Background="Transparent">
        <Border BorderBrush="Blue" BorderThickness="1" Background="Blue" 
                CornerRadius="10" VerticalAlignment="Center" Height="auto" Width="400"
                HorizontalAlignment="Center">
          <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                     FontSize="20" Foreground="Yellow"
                     TextWrapping="Wrap" Margin="5" Text="{Binding}"/>
        </Border>
      </Border>
    </Grid>
</Window>
